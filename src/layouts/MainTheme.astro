---
// Component Imports
import Navbar from '../components/Navbar.astro'
const {currentPage} = Astro.props
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover maximum-scale=1.0">
    <meta name="theme-color" content="rgba(25, 0, 42, 1)" media="(prefers-color-scheme: light)">
    <meta name="theme-color" content="rgba(25, 0, 42, 1)" media="(prefers-color-scheme: dark)">
    <link rel="stylesheet" href="{Astro.resolve('../styles/global.css')}" />
  </head>
  <body>
    <Navbar nav={currentPage}/>
    <main>
    <div class="columns responsive-spacer is-fullhd"></div>
    <slot/>
      
    <slot name="main" />
    </main>
  </body>
</html>

<style>
/** Fix iOS side scrolling issue **/
  html, body {
    max-width: 100%;
    overflow-x: hidden;
}
</style>